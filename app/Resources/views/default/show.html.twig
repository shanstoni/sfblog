{% extends 'base.html.twig' %}

{% block body %}
    
    <h1>{{post.title}}</h1>
    
    <div>
        
        <p>{{ post.lead }}</p>
        
        <p>{{ post.content }}</p>
        
        <span class=''>Dodano: {{ post.createdAt|date('H:i d/m/y') }} </span>
        
        <hr/>
        
        <h3>Komentarze</h3>
        
        {% if app.user %}
        
        {{ form_start(form) }}
        
            {{ form_widget(form) }}
            
            <button class='btn btn-primary float-right'>Dodaj komentarz</button>
            
        {{ form_end(form) }}
        
        {% else %}
            
            <p>Komentarze mogą dodawać tylko zalogowani użytkownicy. <a href='{{ path('fos_user_security_check') }}'>Zaloguj się</a></p>
        
        {% endif %}
        
        <hr/>
        
        {% for comment in post.comments %}
            
            <div>
                
                <p>{{comment.content}}</p>
                <span class=''>Dodany: {{ comment.createdAt|date('H:i d/m/y') }} </span>
                
            </div>
                <hr/>
            
        {%endfor%}
        
    </div>
       
{% endblock %}
